# ============================================================================
# Library API - Example environment configuration
# Copy this file to `.env` before running the app.
# ============================================================================

# ----------------------------------------------------------------------------
# Database settings (used by Docker Compose)
# ----------------------------------------------------------------------------
POSTGRES_DB=library
POSTGRES_USER=library
POSTGRES_PASSWORD=library
POSTGRES_HOST=db        # "db" is the service name in docker-compose.yml
POSTGRES_PORT=5432

# ----------------------------------------------------------------------------
# Local override (optional)
# Uncomment if you want to run the API outside Docker,
# e.g. with Postgres exposed on localhost:55432
# ----------------------------------------------------------------------------
# DATABASE_URL=postgresql+asyncpg://library:library@localhost:55432/library

# ----------------------------------------------------------------------------
# Application settings
# ----------------------------------------------------------------------------
APP_ENV=dev
LOG_LEVEL=INFO
